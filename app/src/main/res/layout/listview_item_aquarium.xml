<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/shapes_aquarium_list"
    android:layout_marginTop="@dimen/aquariumHomeListTopMargin"
    android:layout_marginBottom="@dimen/aquariumHomeListTopMargin"
    android:layout_marginLeft="@dimen/aquariumHomeListMargin"
    android:layout_marginRight="@dimen/aquariumHomeListMargin"
    android:columnCount="2">

    <LinearLayout
        android:layout_column="0"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/aquariumListSidePadding"
        android:paddingBottom="@dimen/aquariumListTopPadding"
        android:paddingLeft="@dimen/aquariumListSidePadding"
        android:paddingTop="@dimen/aquariumListTopPadding"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/listItemAquariumPhoto"
            android:layout_width="@dimen/aquariumListPhoto"
            android:layout_height="@dimen/aquariumListPhoto"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/listItemAquariumInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/listItemAquariumName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/listItemAquariumDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:maxLines="1"
                android:ellipsize="end"/>

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/listItemAquariumMenu"
        android:layout_gravity="end"
        android:layout_column="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_horiz"
        android:background="@null"
        android:layout_marginEnd="5dp"/>

</GridLayout>